<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:text="Kies categorie voor nieuwe item:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText"
        android:hint="Naam"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:text="Houdbaarheidsdatum bijhouden"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/thtBox" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"

        android:id="@+id/thtLayout"
        android:visibility="gone">

        <TextView
            android:text="Datum: "
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"/>
        <Button
            android:id="@+id/createDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Datum kiezen"
            android:onClick="showDatePickerNewItem"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>
    </LinearLayout>

    <CheckBox
        android:text="Voorraad bijhouden"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/voorraadBox" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:id="@+id/voorraadLayout"
        android:visibility="gone">

        <TextView
            android:text="Aantal: "
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <EditText
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:inputType="number"
            android:id="@+id/txtVoorraad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <CheckBox
        android:text="Volume bijhouden"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volumeBox" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:id="@+id/volumeLayout"
        android:visibility="gone">

        <TextView
            android:text="Volume(mL): "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <EditText
            android:text="0"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="15sp"
            android:inputType="number"
            android:id="@+id/txtVolume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/save"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Opslaan"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/cancel"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Annuleer"

            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

    </LinearLayout>
</LinearLayout>